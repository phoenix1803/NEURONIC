{
    "cli": {
        "version": ">= 12.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "base": {
            "android": {
                "image": "latest",
                "resourceClass": "medium"
            }
        },
        "development": {
            "extends": "base",
            "developmentClient": true,
            "distribution": "internal",
            "android": {
                "buildType": "apk",
                "gradleCommand": ":app:assembleDebug"
            }
        },
        "preview": {
            "extends": "base",
            "distribution": "internal",
            "android": {
                "buildType": "apk",
                "withoutCredentials": true
            }
        },
        "preview-signed": {
            "extends": "base",
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            }
        },
        "production": {
            "extends": "base",
            "android": {
                "buildType": "app-bundle"
            }
        }
    },
    "submit": {
        "production": {}
    }
}